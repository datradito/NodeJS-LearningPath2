<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/shop.css">
    <link rel="stylesheet" href="/css/estilos-base.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (prods.length> 0) { %>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img class="imagen-producto" src="<%= product.imageUrl %>" alt="<%= product.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$
                                        <%= product.price %>
                                    </h2>
                                    <p class="product__description">
                                        <%= product.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <div class="action__button">
                                        <a href="/admin/edit-product/<%= product.id %>?edit=true" class="boton">Edit</a>
                                    </div>
                                    <div class="action__button">
                                        <form class="edit-product" action="/admin/delete-product" method="POST">
                                            <input type="hidden" value="<%= product.id %>" name="productId">
                                            <button class="boton" type="submit">Delete</button>
                                        </form>
                                        <div class="action__button">
                                            <a href="/shop/product-details/<%= product.id %>" class="boton">Mas
                                                Detalles</a>
                                        </div>
                                    </div>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No encontramos nada!!

                        </h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>